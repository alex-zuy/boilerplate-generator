<?xml version="1.0" encoding="UTF-8"?>
<configuration
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="config-schema.xsd"
        xmlns="config-schema.xsd">
    <beanProcessing>
        <supportClasses>
            <basePackage>org.alex.zuy.boilerplate.test.generated.support</basePackage>
        </supportClasses>
        <generationStyle>
                <metadataClasses>
                    <propertyClassName>${beanClassName}Properties</propertyClassName>
                    <relationshipClassName>${beanClassName}Relationships</relationshipClassName>
                    <stringConstantNameStyle>uppercase</stringConstantNameStyle>
                    <relationshipsClassTerminalMethodNameTemplate>${beanPropertyName}Property</relationshipsClassTerminalMethodNameTemplate>
                </metadataClasses>
        </generationStyle>
        <domain>
            <includes>
                <typeAnnotations>
                    <annotation>org.alex.zuy.boilerplate.test.IncludeMarker</annotation>
                </typeAnnotations>
            </includes>
        </domain>
    </beanProcessing>
</configuration>
